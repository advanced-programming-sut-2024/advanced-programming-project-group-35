<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="800" prefWidth="1400" styleClass="login-menu-background"
            stylesheets="@../CSS/allMenu.css, @../CSS/allFiles.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.view.menuControllers.LoginMenuControllerView">
    <VBox alignment="CENTER" prefHeight="800" prefWidth="1400" spacing="30.0">
        <Button fx:id="loginButton" minWidth="250" onMouseClicked="#openLoginStage" styleClass="brown-button"
                text="Login">
            <VBox.margin>
                <Insets top="100.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="registerButton" minWidth="250" onMouseClicked="#openRegisterStage" styleClass="brown-button"
                text="Register"/>
        <HBox alignment="CENTER" prefHeight="50" prefWidth="500" spacing="30.0">
            <Button minWidth="150" onMouseClicked="#testApp1" styleClass="brown-button"
                    text="Test App 1"/>
            <Button minWidth="150" onMouseClicked="#testApp2" styleClass="brown-button"
                    text="Test App 2"/>
        </HBox>
    </VBox>
</AnchorPane>
