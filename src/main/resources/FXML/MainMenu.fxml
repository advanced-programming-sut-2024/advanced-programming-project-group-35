<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.menuControllers.MainMenuControllerView"
            prefHeight="800.0" prefWidth="1400.0"
            stylesheets="@../CSS/allMenu.css, @../CSS/allFiles.css"
            styleClass="main-menu-background">
    <VBox alignment="BOTTOM_CENTER" prefHeight="800.0" prefWidth="1400.0" spacing="30.0">
            <HBox alignment="CENTER" spacing="20.0" prefWidth="1400" prefHeight="300">
                <VBox alignment="CENTER" spacing="8" prefWidth="300" translateY="47">
                    <Button onMouseClicked="#startGame" styleClass="brown-button" text="Play new game" minWidth="270" maxHeight="30"/>
                    <Button onMouseClicked="#openProfileMenu" styleClass="brown-button" text="Profile Menu" minWidth="270" maxHeight="30"/>
                    <Button onMouseClicked="#openScoreTable" styleClass="brown-button" text="Score table" minWidth="270" maxHeight="30"/>
                    <Button onMouseClicked="#logout" styleClass="brown-button" text="Logout" minWidth="270" maxHeight="30"/>
                </VBox>
            </HBox>
    </VBox>

</AnchorPane>

